{
  "name": "cross-chain-swap-examples",
  "version": "1.0.0",
  "description": "Combined cross-chain swap examples using EVM and XRPL integration",
  "main": "combined-cross-chain-swap.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "example:evm-xrpl": "ts-node combined-cross-chain-swap.ts",
    "example:simple": "ts-node simple-example.ts"
  },
  "keywords": [
    "cross-chain",
    "swap",
    "xrpl",
    "ethereum",
    "typescript",
    "defi"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@1inch/cross-chain-sdk": "^0.1.15",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "xrpl": "^2.14.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
