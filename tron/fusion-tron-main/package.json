{
  "name": "fusion-tron-main",
  "version": "1.0.0",
  "description": "1inch Fusion+ Cross-Chain Swap: Ethereum Sepolia â†” Tron Nile - Competition Implementation",
  "main": "src/index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "verify-setup": "node scripts/verify-setup.js",
    "test-networks": "node scripts/test-networks.js",
    "build": "npm run build:contracts && npm run build:resolver && npm run build:ui",
    "build:contracts": "npx hardhat compile && tronbox compile",
    "build:resolver": "npx tsc -p src/resolver/tsconfig.json",
    "build:ui": "cd frontend && npm run build",
    "deploy:all": "npm run deploy:ethereum && npm run deploy:tron",
    "deploy:ethereum": "npx hardhat run scripts/deploy-ethereum.js --network sepolia",
    "deploy:tron": "tronbox migrate --network nile",
    "start:resolver": "node src/resolver/index.js",
    "start:ui": "cd frontend && npm run dev",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npx jest tests/unit",
    "test:integration": "npx jest tests/integration",
    "test:e2e": "npx jest tests/e2e",
    "demo:start": "concurrently \"npm run start:resolver\" \"npm run start:ui\"",
    "demo:eth-to-tron": "node scripts/demo-eth-to-tron.js",
    "demo:tron-to-eth": "node scripts/demo-tron-to-eth.js"
  },
  "keywords": [
    "1inch",
    "fusion",
    "cross-chain",
    "ethereum",
    "tron",
    "defi",
    "htlc",
    "competition"
  ],
  "author": "Fusion+ Competition Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "hardhat": "^2.19.0",
    "concurrently": "^8.0.0"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "tronweb": "^15.0.0",
    "dotenv": "^16.3.0",
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
