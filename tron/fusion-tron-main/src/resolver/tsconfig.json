{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/resolver",
    "rootDir": "../",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["../**/*.ts"],
  "exclude": ["../../node_modules", "../../dist", "../../tests"]
}
