{
  "name": "fusion-tron-extension",
  "version": "1.0.0",
  "description": "Cross-chain swap extension for 1inch Fusion+ with TRON support",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:integration": "jest src/tests/integration/CrossChainSwapIntegration.test.ts",
    "test:sdk": "jest src/tests/",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:eth": "hardhat run scripts/deploy/02-deploy-official-escrow.ts --network sepolia",
    "deploy:tron": "node scripts/deploy/07-simple-tron-deploy.js",
    "test:tron": "node scripts/utils/test-real-tron-contracts.js",
    "validate": "hardhat run scripts/utils/deploy-and-validate.ts --network hardhat",
    "demo": "ts-node scripts/demo/hackathon-demo.ts",
    "demo:live": "ts-node scripts/demo/live-swap-demo.ts",
    "test:atomic": "ts-node scripts/demo/test-atomic-swap.ts",
    "demo:help": "ts-node scripts/demo/hackathon-demo.ts --help",
    "validate:deployment": "ts-node scripts/utils/validate-deployment.ts",
    "test:phase5": "ts-node scripts/test/test-phase5-sdk.ts",
    "build:sdk": "tsc --project tsconfig.json",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@1inch/fusion-sdk": "^2.0.0",
    "@1inch/limit-order-protocol-utils": "^4.0.0",
    "@1inch/solidity-utils": "^5.0.0",
    "@openzeppelin/contracts": "^5.1.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "tronweb": "^5.3.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "solidity-coverage": "^0.8.16",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.2",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
